<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="294.0" prefWidth="272.0" spacing="20.0" style="-fx-background-color: blue;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo8.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="Messenger" textFill="WHITE">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <TextField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="41.0" prefWidth="215.0" promptText="Username" />
   <PasswordField maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="41.0" prefWidth="215.0" promptText="Password" />
   <Button mnemonicParsing="false" style="-fx-background-color: tansparent;" text="Forgot password?" textFill="WHITE" />
   <Button mnemonicParsing="false" prefHeight="49.0" prefWidth="144.0" style="-fx-background-color: Black;" text="Login" textFill="WHITE">
      <font>
         <Font name="System Bold" size="15.0" />
      </font></Button>

    <Label fx:id="welcomeText" />
    <Button onAction="#onHelloButtonClick" style="-fx-background-color: GREEN;" text="No account? Sign In" textFill="WHITE">
      <font>
         <Font name="System Bold Italic" size="15.0" />
      </font></Button>
</VBox>
